{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "HelpMeOut",
    "description": "Help your friends and loved ones by creating and sending videos on how to get things done on a website.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon-16.png",
            "32": "icon-32.png",
            "192": "icon-192.png",
            "512": "icon-512.png"
        }
    },
    "permissions": [
        "desktopCapture",
        "activeTab",
        "tabs",
        "storage", 
        "videoCapture" 
    ],
    "icons": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "192": "icon-192.png",
        "512": "icon-512.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}
